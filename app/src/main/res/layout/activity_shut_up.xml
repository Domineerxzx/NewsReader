<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorWhite">

        <ImageView
            android:id="@+id/iv_close_shut_up"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@id/tv_title"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="管理禁言"
            android:textSize="16dp"
            android:textColor="@color/colorAppStyle"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorLine" />
    </RelativeLayout>

    <com.domineer.triplebro.newsreader.views.NavitationLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/nl_shut_up"
        android:layout_below="@id/rl_title"
        android:background="@color/colorWhite"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_shut_up"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/nl_shut_up"
        android:background="@color/colorWhite"/>

</RelativeLayout>